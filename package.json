{
  "name": "@alsandre/responsive-image-carousel",
  "version": "0.1.20",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:package": "rimraf dist && tsc --project tsconfig.build.json && copyfiles -u 1 \"src/**/*.css\" dist",
    "publish:package": "yarn bump && yarn build:package && yarn check:login && yarn register:package || echo 'Please log in to npm...'",
    "bump": "yarn version --patch",
    "check:login": "npm whoami > /dev/null 2>&1",
    "register:package": "npm publish"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.7",
    "typescript": "^4.4.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alsandre/responsive-image-carousel.git"
  },
  "author": "Alsandre",
  "license": "MIT"
}
